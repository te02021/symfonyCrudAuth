{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center mt-5" style="min-height: 80vh;">
    <div class="w-100" style="max-width: 400px;">
        <h1 class="h4 mb-4 text-center">Registro de Usuario</h1>

        {{ form_start(registrationForm) }}

        <div class="form-group mb-3 text-start">
            {{ form_label(registrationForm.email, 'Correo Electronico') }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="form-group mb-3 text-start">
            {{ form_label(registrationForm.password.first, 'Contraseña') }}
            {{ form_widget(registrationForm.password.first, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.password.first) }}
        </div>

        <div class="form-group mb-3 text-start">
            {{ form_label(registrationForm.password.second, 'Repetir contraseña') }}
            {{ form_widget(registrationForm.password.second, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.password.second) }}
        </div>

        <button class="btn btn-primary w-100 mb-3" type="submit">Registrarse</button>

        <div class="text-muted small text-center">
            ¿Ya tienes una cuenta?
            <a href="{{ path('app_login') }}">Inicia sesión</a>
        </div>

        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}



