{% extends 'base.html.twig' %}

{% block title %}Producto{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Detalle del Producto</h1>

    <table class="table table-bordered text-center align-middle">
        <thead class="table-light">
            <tr>
                <th style="width: 10%;">ID</th>
                <th style="width: 40%;">Nombre</th>
                <th style="width: 25%;">Precio</th>
                <th style="width: 25%;">Stock</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ producto.id }}</td>
                <td>{{ producto.nombre }}</td>
                <td>${{ producto.precio|number_format(2, '.', ',') }}</td>
                <td>{{ producto.stock }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <div>
            <a style="width: 100px" href="{{ path('app_producto_index') }}" class="btn btn-secondary">‚Üê Volver</a>
        </div>

        <div class="d-flex gap-2">
            <a style="width: 100px" href="{{ path('app_producto_edit', {'id': producto.id}) }}" class="btn btn-warning">Editar</a>
            {{ include('producto/_delete_form.html.twig') }}
        </div>
    </div>

</div>


{% endblock %}
