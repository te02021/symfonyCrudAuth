{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center mt-5" style="min-height: 80vh;">
    <div class="w-100" style="max-width: 400px;">
        <form method="post" class="text-center">

            {% if error %}
                <div class="alert alert-danger">
                    Usuario o Contraseña no registrados.
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Actualmente has iniciado sesion como {{ app.user.userIdentifier }},
                    <a href="{{ path('app_logout') }}">Cerrar Sesion</a>
                </div>
            {% endif %}

            <h1 class="h4 mb-4">Iniciar Sesion</h1>

            <div class="form-group mb-3 text-start">
                <label for="username">Correo Electronico</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username"
                       class="form-control" autocomplete="email" required autofocus>
            </div>

            <div class="form-group mb-3 text-start">
                <label for="password">Contraseña</label>
                <input type="password" name="_password" id="password"
                       class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

            <button class="btn btn-primary w-100 mb-3" type="submit">
                Iniciar Sesion
            </button>

            <div class="text-muted small">
                ¿No tienes una cuenta?
                <a href="{{ path('app_register') }}">Regístrate aquí</a>
            </div>
        </form>
    </div>
</div>

{% endblock %}
